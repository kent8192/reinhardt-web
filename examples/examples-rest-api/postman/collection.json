{
	"info": {
		"name": "Reinhardt examples-rest-api",
		"description": "Article Management REST API Tests",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"item": [
				{
					"name": "GET /health",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/health",
							"host": ["{{baseUrl}}"],
							"path": ["health"]
						}
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Status code is 200', function() {",
									"    pm.response.to.have.status(200);",
									"});"
								]
							}
						}
					]
				}
			]
		},
		{
			"name": "Articles CRUD",
			"item": [
				{
					"name": "List Articles (Initial)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/articles/",
							"host": ["{{baseUrl}}"],
							"path": ["api", "articles", ""]
						}
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Status code is 200', function() {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response is JSON', function() {",
									"    pm.response.to.be.json;",
									"});"
								]
							}
						}
					]
				},
				{
					"name": "Create Article",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Test Article\",\n    \"content\": \"This is a test article content for API testing.\",\n    \"author\": \"API Tester\",\n    \"published\": true\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/articles/",
							"host": ["{{baseUrl}}"],
							"path": ["api", "articles", ""]
						}
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Status code is 201', function() {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test('Article created with correct data', function() {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.title).to.eql('Test Article');",
									"    pm.expect(jsonData.author).to.eql('API Tester');",
									"    pm.expect(jsonData.published).to.eql(true);",
									"    pm.environment.set('articleId', jsonData.id);",
									"});"
								]
							}
						}
					]
				},
				{
					"name": "Get Article",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/articles/{{articleId}}/",
							"host": ["{{baseUrl}}"],
							"path": ["api", "articles", "{{articleId}}", ""]
						}
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Status code is 200', function() {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Returned article matches created article', function() {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.title).to.eql('Test Article');",
									"    pm.expect(jsonData.author).to.eql('API Tester');",
									"});"
								]
							}
						}
					]
				},
				{
					"name": "Update Article",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Updated Article Title\",\n    \"content\": \"This content has been updated.\",\n    \"author\": \"API Tester\",\n    \"published\": false\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/articles/{{articleId}}/",
							"host": ["{{baseUrl}}"],
							"path": ["api", "articles", "{{articleId}}", ""]
						}
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Status code is 200', function() {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Article updated correctly', function() {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.title).to.eql('Updated Article Title');",
									"    pm.expect(jsonData.published).to.eql(false);",
									"});"
								]
							}
						}
					]
				},
				{
					"name": "Delete Article",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/articles/{{articleId}}/",
							"host": ["{{baseUrl}}"],
							"path": ["api", "articles", "{{articleId}}", ""]
						}
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Status code is 204', function() {",
									"    pm.response.to.have.status(204);",
									"});"
								]
							}
						}
					]
				},
				{
					"name": "Verify Deletion (404)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/articles/{{articleId}}/",
							"host": ["{{baseUrl}}"],
							"path": ["api", "articles", "{{articleId}}", ""]
						}
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Status code is 404', function() {",
									"    pm.response.to.have.status(404);",
									"});"
								]
							}
						}
					]
				}
			]
		}
	]
}
