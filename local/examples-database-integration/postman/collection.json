{
	"info": {
		"name": "Reinhardt examples-database-integration",
		"description": "Todo List REST API Tests with Database Integration",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Todos CRUD",
			"item": [
				{
					"name": "List Todos (Initial)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/todos/",
							"host": ["{{baseUrl}}"],
							"path": ["api", "todos", ""]
						}
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Status code is 200', function() {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response is JSON', function() {",
									"    pm.response.to.be.json;",
									"});"
								]
							}
						}
					]
				},
				{
					"name": "Create Todo",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Test Todo Item\",\n    \"description\": \"This is a test todo item for API testing\",\n    \"completed\": false\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/todos/",
							"host": ["{{baseUrl}}"],
							"path": ["api", "todos", ""]
						}
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Status code is 201', function() {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test('Todo created with correct data', function() {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.title).to.eql('Test Todo Item');",
									"    pm.expect(jsonData.completed).to.eql(false);",
									"    pm.environment.set('todoId', jsonData.id);",
									"});"
								]
							}
						}
					]
				},
				{
					"name": "Get Todo",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/todos/{{todoId}}/",
							"host": ["{{baseUrl}}"],
							"path": ["api", "todos", "{{todoId}}", ""]
						}
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Status code is 200', function() {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Returned todo matches created todo', function() {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.title).to.eql('Test Todo Item');",
									"    pm.expect(jsonData.completed).to.eql(false);",
									"});"
								]
							}
						}
					]
				},
				{
					"name": "Update Todo (Mark Completed)",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Updated Todo Item\",\n    \"description\": \"This todo has been updated and completed\",\n    \"completed\": true\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/todos/{{todoId}}/",
							"host": ["{{baseUrl}}"],
							"path": ["api", "todos", "{{todoId}}", ""]
						}
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Status code is 200', function() {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Todo updated correctly', function() {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.title).to.eql('Updated Todo Item');",
									"    pm.expect(jsonData.completed).to.eql(true);",
									"});"
								]
							}
						}
					]
				},
				{
					"name": "Verify Update",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/todos/{{todoId}}/",
							"host": ["{{baseUrl}}"],
							"path": ["api", "todos", "{{todoId}}", ""]
						}
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Status code is 200', function() {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Todo reflects update', function() {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.title).to.eql('Updated Todo Item');",
									"    pm.expect(jsonData.completed).to.eql(true);",
									"});"
								]
							}
						}
					]
				},
				{
					"name": "Delete Todo",
